<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">



    <Button
        android:id="@+id/signOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_out"
        android:backgroundTint="#0ED6B9"
        android:layout_marginTop="10sp"
        android:layout_marginStart="280sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </Button>

    <Button
        android:id="@+id/add_journey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add journey"
        android:textSize="15sp"
        android:backgroundTint="#0ED6B9"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="130sp"
        android:layout_marginTop="10sp"
        app:layout_constraintRight_toLeftOf="@id/signOut"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="380sp"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_journey"  />


</androidx.constraintlayout.widget.ConstraintLayout>